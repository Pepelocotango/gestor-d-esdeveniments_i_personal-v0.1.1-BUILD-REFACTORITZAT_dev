{
  "name": "gestor-esdeveniments-personal",
  "productName": "Gestor de Esdeveniments i Personal",
  "version": "0.2.0",
  "description": "Una aplicaci√≥ per gestionar esdeveniments i personal",
  "author": "Pep",
  "main": "main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron": "wait-on tcp:3000 && electron .",
    "electron-dev": "concurrently \"npm run dev\" \"npm run electron\"",
    "build:electron": "npm run build && electron-builder",
    "dist": "electron-builder",
    "build:mac": "npm run build && electron-builder --mac --x64 --publish never",
    "build:linux": "npm run build && electron-builder --linux --x64 --publish never",
    "build:win": "npm run build && electron-builder --win --x64 --publish never"
  },
  "dependencies": {
    "@fullcalendar/core": "^6.1.17",
    "@fullcalendar/daygrid": "^6.1.17",
    "@fullcalendar/interaction": "^6.1.17",
    "@fullcalendar/list": "^6.1.17",
    "@fullcalendar/multimonth": "^6.1.17",
    "@fullcalendar/react": "^6.1.17",
    "@fullcalendar/timegrid": "^6.1.17",
    "@heroicons/react": "^2.2.0",
    "file-saver": "^2.0.5",
    "googleapis": "^150.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/file-saver": "^2.0.7",
    "@types/node": "^20.14.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.5.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3",
    "postcss": "^8.5.4",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.5.3",
    "vite": "^6.3.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.gestorevents.app",
    "productName": "gestor-esdeveniments",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "main.cjs",
      "preload.cjs",
      "LICENSE",
      "google-credentials.json"
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Office"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "icon": "public/icon.icns",
      "identity": null
    }
  }
}
